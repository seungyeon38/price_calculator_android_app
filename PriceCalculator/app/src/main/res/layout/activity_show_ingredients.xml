<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowIngredients">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/main_btn_style"
            android:onClick="addGradient"
            android:text="재료 추가"
            android:textColor="#616161"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="right"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="5dp"
            >
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f0d8b6"
                >
                <TableRow android:background="@drawable/table_border_style">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="재료"
                        android:textColor="@color/dark_brown"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_weight="1"
                        android:ems="5"
                        android:ellipsize="end"
                        android:maxLines="1"
                        />
                    <TextView android:text="무게/수량"
                        android:textColor="@color/dark_brown"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_weight="1"
                        android:ems="4"
                        android:ellipsize="end"
                        android:maxLines="1"
                        />
                    <TextView android:text="가격"
                        android:textColor="@color/dark_brown"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_weight="2"
                        android:ems="3"
                        android:ellipsize="end"
                        android:maxLines="1"
                        />
                    <TextView android:text="단위당 가격"
                        android:textColor="@color/dark_brown"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_weight="2"
                        android:ems="3"
                        android:ellipsize="end"
                        android:maxLines="1"
                        />
                    <TextView
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_weight="1"
                        android:ems="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        />
                </TableRow>
            </TableLayout>
            <!--해당 액티비티에 리사이클러뷰를 추가-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_gradient_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f0e9"/>
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
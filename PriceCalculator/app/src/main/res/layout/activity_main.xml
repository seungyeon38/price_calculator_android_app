<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    >

    <Button
        android:id="@+id/show_gradient_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="30dp"
        android:height="50dp"
        android:onClick="showGradients"
        android:textSize="20dp"
        android:textColor="#616161"
        android:textStyle="bold"
        android:text="재료 리스트 보기"
        android:background="@drawable/button_style"
        />

    <Button
        android:id="@+id/show_menu_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="30dp"
        android:height="50dp"
        android:onClick="showMenus"
        android:textSize="20dp"
        android:textColor="#616161"
        android:textStyle="bold"
        android:text="메뉴 추천 판매가 보기"
        android:background="@drawable/button_style"
        app:layout_constraintTop_toBottomOf="@+id/show_gradient_btn" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="30dp"
        android:height="50dp"
        android:onClick="addMenu"
        android:textSize="20dp"
        android:textColor="#616161"
        android:textStyle="bold"
        android:text="메뉴 추가하기"
        android:background="@drawable/button_style"
        app:layout_constraintTop_toBottomOf="@+id/show_menu_btn" />


</LinearLayout>